<Window x:Class="Ncs.WpfApp.Views.OrdersConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirm Order Status"
        Height="200" Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Select Action:" FontSize="16" FontWeight="Bold" Margin="10"/>

        <!-- Action Selection -->
        <ComboBox x:Name="cmbAction" 
                  ItemsSource="{Binding StatusOptions}" 
                  SelectedItem="{Binding SelectedAction, Mode=TwoWay}"
                  Margin="10" Height="30"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Submit" Width="80" Height="30" Command="{Binding SubmitCommand}"/>
            <Button Content="Cancel" Width="80" Height="30" Margin="10,0,0,0" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>

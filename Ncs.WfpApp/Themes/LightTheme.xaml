<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Backgrounds -->
    <SolidColorBrush x:Key="PrimaryBackground" Color="#F9F9F9"/>
    <!-- Light gray for soft contrast -->
    <SolidColorBrush x:Key="PanelBackground" Color="#FFFFFF"/>
    <!-- Pure white for clarity -->
    <SolidColorBrush x:Key="PanelTitleBackground" Color="#EAEAEA"/>
    <!-- Slightly darker for section headers -->
    <SolidColorBrush x:Key="TextBoxBackground" Color="#FFFFFF"/>
    <!-- White for clean input fields -->

    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryText" Color="#333333"/>
    <!-- Darker text for readability -->
    <SolidColorBrush x:Key="SecondaryText" Color="#666666"/>
    <!-- Lighter gray for secondary info -->

    <!-- Borders -->
    <SolidColorBrush x:Key="BorderBrushColor" Color="#DDDDDD"/>
    <!-- Softer border color -->

    <!-- Buttons -->
    <SolidColorBrush x:Key="ButtonBackground" Color="#0078D7"/>
    <!-- Windows blue for primary actions -->
    <SolidColorBrush x:Key="ButtonForeground" Color="#FFFFFF"/>
    <!-- White text for contrast -->
    <SolidColorBrush x:Key="ButtonBorder" Color="#005A9E"/>
    <!-- Darker blue for border -->

    <!-- Hover and Pressed States -->
    <SolidColorBrush x:Key="HoverColor" Color="#005A9E"/>
    <!-- Darker blue for hover effect -->
    <SolidColorBrush x:Key="PressedColor" Color="#00457E"/>
    <!-- Even darker blue for pressed state -->

</ResourceDictionary>
